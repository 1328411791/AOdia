<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/STTTViewTime"
        android:text="00"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="★"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/STTTViewAdd"
        android:textSize="8sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/STTTViewTime"
        android:layout_toEndOf="@+id/STTTViewTime" />

    <TextView
        android:text="大"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/STTTViewGoto"
        android:textSize="8sp"
        android:layout_below="@+id/STTTViewAdd"
        android:layout_toRightOf="@+id/STTTViewTime"
        android:layout_toEndOf="@+id/STTTViewTime" />
    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/STTTViewGoto"
        />
</RelativeLayout>
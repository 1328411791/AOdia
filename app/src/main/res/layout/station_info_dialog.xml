<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:orientation="vertical">

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stationNameView"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="駅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beforeStationButton"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:background="@android:drawable/btn_default" />

        <Button
            android:text="駅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afterStationButton"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right|center_vertical"
            android:background="@android:drawable/btn_default" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <Button
            android:text="下り駅時刻表"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/downTimeTableButton"
            android:background="@android:drawable/btn_default" />

        <Button
            android:text="上り駅時刻表"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upTimeTableButton"
            android:layout_below="@+id/downTimeTableButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/btn_default" />

        <Button
            android:text="この駅基準に並び替える"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sortButton"
            android:layout_alignParentTop="false"
            android:layout_toLeftOf="@+id/afterStationButton"
            android:layout_toRightOf="@+id/beforeStationButton"
            android:layout_toEndOf="@+id/beforeStationButton"
            android:background="@android:drawable/btn_default" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</LinearLayout>
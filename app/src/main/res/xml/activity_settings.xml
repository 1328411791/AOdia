<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="全体設定">
        <EditTextPreference
            android:key="textsize2"
            android:title="文字サイズ"
            android:inputType="number"
            android:summary="文字サイズを1~99までの大きさで入力してください"
            android:dialogTitle="文字サイズ入力"
            android:defaultValue="30"
            android:maxLength="2">
        </EditTextPreference>

    </PreferenceCategory>
    <PreferenceCategory
        android:title="路線時刻表設定"
        android:enabled="true"
        >
        <EditTextPreference
            android:defaultValue="4"
            android:inputType="number"
            android:key="lineTimetableWidth"
            android:maxLength="1"
            android:summary="秒単位時刻をONにしている時は自動的に+3文字分幅が広がります"
            android:title="路線時刻表の列車の幅：？文字（半角）"></EditTextPreference>
        <CheckBoxPreference
            android:key="secondSystem"
            android:summary="時刻表が秒単位になります"
            android:title="秒単位時刻" />
        <CheckBoxPreference
            android:key="showPass"
            android:title="駅通過時刻"
            android:defaultValue="true"
            android:summary="通過時刻をグレーの文字で表示します" />
        <CheckBoxPreference
            android:key="trainName"
            android:title="列車名"
            android:defaultValue="true"
            android:summary="列車名と号数を表示します" />
        <CheckBoxPreference
            android:key="remark"
            android:title="備考"
            android:defaultValue="true"
            android:summary="備考を表示します" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="ダイヤグラム設定"
        android:enabled="true"
        >
        <CheckBoxPreference
            android:key="onlySolid"
            android:title="ダイヤグラム実線表示"
            android:defaultValue="false"
            android:summary="ダイヤ線の点線を実線にかえパフォーマンスを上げます" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="駅時刻表設定"
        android:enabled="true"
        >
        <CheckBoxPreference
            android:key="STTpass"
            android:title="通過列車を表示"
            android:defaultValue="false"
            android:summary="通過列車の時刻も表示します" />
        <CheckBoxPreference
            android:key="endTrain"
            android:title="当駅どまりを表示"
            android:defaultValue="true"
            android:summary="当駅どまりの列車を表示します" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="有料オプション購入"
        android:enabled="true"
        >
        <CheckBoxPreference
            android:defaultValue="false"
            android:enabled="true"
            android:key="001"
            android:summary="有料オプションです"
            android:title="（300円）oud2ファイル保存機能を解禁する" />
    </PreferenceCategory>
</PreferenceScreen>